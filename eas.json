{
  "cli": {
    "version": ">= 5.2.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "MOCK_MODE": "true",
        "API_BASE_URL": "http://localhost:3000",
        "ENVIRONMENT": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "MOCK_MODE": "false",
        "ENVIRONMENT": "staging"
      }
    },
    "production": {
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "MOCK_MODE": "false",
        "ENVIRONMENT": "production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}



